<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
    <title>Mellowdyne</title>
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/productDetail.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <script
      src="https://kit.fontawesome.com/525d227bb1.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('../partials/navbar')%>
    <main>
      <div class="row footer-row">
        <section class="product-column product-pics">
          <div class="main-image">
            <img src="/images/covers/<%= disc.img %>" />
          </div>

          <div class="small-images">
            <img class="pic" src="/images/covers/<%= disc.img %>" />
            <img class="pic" src="/images/covers/<%= disc.img %> " />
          </div>
        </section>

        <section class="product-column product-info">
          <article>
            <div class="product-details">
              <h4><%= disc.titulo %> - <%= disc.artista %></h4>
            </div>

            <div class="product-price">
              <div class="add-btn">
                <button type="button">Comprame</button>
              </div>
              <div class="price">
                <h3>$<%=disc.precio %> <span class="moneda">MXN</span></h3>
              </div>
            </div>

            <div class="product-details">
              <h4>Detalles</h4>

              <p><%= disc.descripcion %></p>

              <h4>Tracklist</h4>
              <ul class="tracks">
                <% for(let i = 0; i < disc.tracklist.length; i++) { %>
                <li><%= disc.tracklist[i]%></li>
                <% } %>
              </ul>
            </div>
          </article>
        </section>
      </div>
    </main>
    <%- include('../partials/footer')%>
    <script src="/js/index.js"></script>
  </body>
</html>
