<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Mellowdyne</title>
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/productCart.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <script
      src="https://kit.fontawesome.com/525d227bb1.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('../partials/navbar')%>

    <section class="container-car" style="margin-bottom: 5%">
      <!-- Se actualizÃ³ -->
      <div class="header-carrito">
        <h2>Tu carrito</h2>
      </div>

      <% for(const product of allProducts) { %>
      <div class="productoX">
        <a href="/products/detail">
          <img class="img-car" src="/images/covers/<%= product.image %>" />
        </a>
        <div class="info-album">
          <p class="artist"><%= product.artist.name %></p>
        </div>
        <div class="cantidad">
          <i class="fas fa-minus-circle"></i>
          <p>1</p>
          <i class="fas fa-plus"></i>
        </div>
        <div>
          <p class="precio-album">$<%= product.price %> MXN</p>
        </div>
        <p class="borrar"><a href="#">Eliminar</a></p>
      </div>
      <% } %>

      <div class="subtotal">
        <h5>Subtotal</h5>
        <p id="x-pagar">$<%= albumInCar.price %> MXN</p>
      </div>
      <div class="btn-form">
        <button class="form-btn" type="button">
          <a href="/">Seguir comprando</a>
        </button>
        <button class="form-btn-finalizar" type="submit">
          Finalizar pedido
        </button>
      </div>
    </section>
    <%- include('../partials/footer')%>
    <script src="/js/index.js"></script>
  </body>
</html>
