<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
    <title>Mellowdyne</title>
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/register.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <script
      src="https://kit.fontawesome.com/525d227bb1.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('../partials/navbar')%>

    <!-- Formulario -->
    <h2 class="register-title">Crea tu cuenta</h2>

    <form action="/" method="get" class="create-form form-holder">
      <div class="control-form">
        <!-- <label>Nombre y apellido</label> -->
        <input
          required
          type="text"
          name="usuario"
          class="control"
          placeholder="Ingresa tu nombre y apellido"
        />
      </div>

      <div class="control-form">
        <!-- <label>Correo</label> -->
        <input
          required
          type="email"
          name="correo"
          placeholder="Ingresa tu correo"
          class="control"
        />
      </div>

      <div class="control-form">
        <!-- <label> Contraseña</label> -->
        <input
          minlength="8"
          type="password"
          name="contraseña"
          placeholder="Ingresa tu contraseña"
          class="control"
        />
      </div>

      <div class="control-form">
        <!-- <label> Confirmar contraseña</label> -->
        <input
          minlength="8"
          type="password"
          name="confirmar-contraseña"
          placeholder="Confirma tu contraseña"
          class="control"
        />
      </div>

      <div class="politica">
        <input
          class="check-polit"
          type="checkbox"
          name="intereses"
          id="politica"
          value=""
        />
        <label class="polit-label" for="politica" class="interes_opcion">
          Acepto la política de privacidad
        </label>
      </div>

      <div class="btn-form">
        <button type="submit" class="form-btn">Confirmar</button>
      </div>
    </form>
    <%- include('../partials/footer')%>
    <script src="/js/index.js"></script>
  </body>
</html>
