<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
    <title>Mellowdyne</title>
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/register.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <script
      src="https://kit.fontawesome.com/525d227bb1.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('../partials/navbar')%>

    <!-- Formulario -->
    <h2 class="register-title">Crea tu cuenta</h2>

    <form
      method="POST"
      action="/users/register"
      class="create-form form-holder"
    >
      <div class="control-form">
        <label><b>Nombre completo:</b></label>
        <input
          type="text"
          name="full_name"
          class="control icon-placeholder"
          placeholder="<%= locals.errors && errors.full_name ? '' : null %>"
          value="<%= locals.oldData ? oldData.full_name : null %>"
        />

        <% if (locals.errors && errors.full_name) { %>
        <div class="text-danger"><%= errors.full_name.msg %></div>
        <% } %>
      </div>

      <div class="control-form">
        <label><b>Correo electrónico:</b></label>
        <input
          type="text"
          name="email"
          class="control icon-placeholder"
          placeholder="<%= locals.errors && errors.email ? '' : null %>"
          value="<%= locals.oldData ? oldData.email : null %>"
        />

        <% if (locals.errors && errors.email) { %>
        <div class="text-danger"><%= errors.email.msg %></div>
        <% } %>
      </div>

      <div class="control-form">
        <label><b>Contraseña:</b></label>
        <input
          type="password"
          name="password"
          class="control icon-placeholder"
          placeholder="<%= locals.errors && errors.password ? '' : null %>"
          value="<%= locals.oldData ? oldData.password : null %>"
        />

        <% if (locals.errors && errors.password) { %>
        <div class="text-danger"><%= errors.password.msg %></div>
        <% } %>
      </div>

      <div class="politica">
        <input class="check-polit" type="checkbox" name="politic" />
        <label class="polit-label" for="politic" class="interes_opcion">
          Acepto la política de privacidad
        </label>

        <% if (locals.errors && errors.politic) { %>
        <div class="text-danger" style="margin-left: 10px; font-size: 12px">
          <%= errors.politic.msg %>
        </div>
        <% } %>
      </div>

      <div class="btn-form">
        <button type="submit" class="form-btn">Registrarse</button>
      </div>
    </form>
    <%- include('../partials/footer')%>
    <script src="/js/index.js"></script>
  </body>
</html>
