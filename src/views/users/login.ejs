<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
    <title>Mellowdyne</title>
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <script
      src="https://kit.fontawesome.com/525d227bb1.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('../partials/navbar')%>

    <!-- Formulario -->

    <h2 class="register-title">Iniciar sesión</h2>
    <h4 class="ms-error"></h4>

    <form action="/users/login" method="POST" class="create-form form-holder" id="form-login">
      <div class="control-form">
        <label><b>Correo electrónico:</b></label>
        <input type="text" name="email" class="control" id= "email"/>
        <div class="is-invalid"></div>

        <% if (locals.errors && errors.email) { %>
        <div class="text-danger"><%= errors.email.msg %></div>
        <% } %>
      </div>

      <div class="control-form">
        <label><b>Contraseña:</b></label>
        <input type="password" name="password" class="control" id="password"/>
        <div class="is-invalid"></div>

        <% if (locals.errors && errors.password) { %>
        <div class="text-danger"><%= errors.password.msg %></div>
        <% } %>
      </div>
      <div>
        <label class="form-check-label">
          <input
            type="checkbox"
            class="form-check-input"
            name="remember_user"
          />Recordar mi usuario
        </label>
      </div>
      <div class="btn-form">
        <button type="submit" class="form-btn">Acceder</button>
      </div>
    </form>

    <div>
      <div class="btn-form">
        <p><a href="#">Olvidaste tu contrasena?</a></p>
      </div>

      <div class="btn-form">
        <a class="form-btn register" href="/users/register">Registrate</a>
      </div>
    </div>
    <%- include('../partials/footer')%>
    <script src="/js/index.js"></script>
    <script src="/js/validateLogin.js"></script>
  </body>
</html>
